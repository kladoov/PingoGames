<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D0E5FF"
    android:id="@+id/frameLayout"
    tools:context=".click_pingo">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_margin="10dp"
        android:backgroundTint="#324D6F"
        app:maxImageSize="32dp"
        android:onClick="volver"/>

    <!--Clicks-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/disenio_boton_clicks_pulsado">

        <TextView
            android:id="@+id/clicks"
            style="@style/fuentePersonalizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Clicks: "
            android:textAlignment="center" />
    </LinearLayout>

    <!--Tiempo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/disenio_boton_clicks_pulsado"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/tiempo"
            style="@style/fuentePersonalizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Tiempo: "
            android:textAlignment="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pinguino"
        android:layout_width="238dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:onClick="pinguinoboing"
        android:src="@drawable/picsvg_download" />

    <!--Niveles del juego-->
    <Button
        android:id="@+id/level1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/disenio_boton_clicks"
        style="@style/botonesjuegoclick"
        android:text="Level 1 \n15 seg"
        android:layout_gravity="bottom"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/level2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/disenio_boton_clicks"
        style="@style/botonesjuegoclick"
        android:text="Level 2 \n10 seg"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/level3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/disenio_boton_clicks"
        style="@style/botonesjuegoclick"
        android:text="Level 3\n6 seg"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp" />

    <TextView
        style="@style/fuentePersonalizada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="bottom" />

</FrameLayout>