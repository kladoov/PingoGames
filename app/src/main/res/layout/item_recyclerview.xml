<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="12dp"
    android:background="@drawable/disenio_recyclerview"
    android:padding="2dp">

    <ImageView
        android:id="@+id/imagen_item_rv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/pinguino"/>

    <TextView
        android:id="@+id/usuario_item_rv"
        style="@style/recyusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:text="usuario" />

    <TextView
        style="@style/recyusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:text="Record puntos: " />

    <TextView
        android:id="@+id/puntos_item_rv"
        style="@style/recyusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:text="0" />

</FrameLayout>
